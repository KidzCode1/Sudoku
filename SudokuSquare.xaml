<UserControl x:Class="Sudoku.SudokuSquare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sudoku"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="BlueViolet" BorderThickness="1">
        <Grid x:Name="Grid1" Height="60" Width="60" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="tbxValue" FontSize="38" HorizontalAlignment="Center" FontWeight="Black" Background="Transparent" BorderThickness="0" Margin="8,6,10,-5" Grid.RowSpan="2" TextChanged="tbxValue_TextChanged" >

            </TextBox>
            <TextBlock x:Name="tbNotes" Text="" Width="Auto" Height="Auto" FontSize="10" Margin="0,0,2,44" Foreground="#FF636363" Grid.RowSpan="2"/>
        </Grid>
    </Border>
</UserControl>
